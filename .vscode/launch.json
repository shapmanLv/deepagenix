{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deepagenix Core Module",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/src/core/bin/Debug/net9.0/core.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/core",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            // "serverReadyAction": {
            //     "action": "openExternally",
            //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            // },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "CONSUL_HOST": "localhost",
                "CONSUL_PORT": "8600",
                "IP": "host.docker.internal"
            }
        },
        {
            "name": "Deepagenix Component Python Module",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.components.python.main:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": false,
            "python": "${workspaceFolder}/src/components/python/.venv/bin/python3.13",
            "cwd": "${workspaceFolder}",
            "env": {
                // "PYTHON_GIL": "0",
                // "PYTHON_JIT": "1",
                "CONSUL_HOST": "localhost",
                "CONSUL_PORT": "8600",
                "IP": "host.docker.internal",
                // "PYTHONPATH": "${workspaceFolder}/src/components/python:${workspaceFolder}/src/components/python/.venv/lib/python3.13/site-packages" // 添加项目根目录到 Python 路径
                "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/src/components/python:${workspaceFolder}/src/components/python/.venv/lib/python3.13/site-packages"
            }
        }
    ]
}